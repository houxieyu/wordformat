            Selection.InsertBefore (vbCrLf)
        End If
    End With
    
    Selection.HomeKey Unit:=wdStory
    With Selection.Find
        .Text = "附件^#："
        .Forward = True
        .Wrap = wdFindStop
        If .Execute Then
            Selection.InsertBefore (vbCrLf)
        End If
    End With
