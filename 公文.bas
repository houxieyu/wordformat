    For i = 1 To ActiveDocument.Paragraphs.Count
        With ActiveDocument.Paragraphs(i).Range
            rgntxt = Replace(Replace(.Text, Chr(10), ""), Chr(13), "")
            Dim isfj As Boolean
            isfj = False
            For j = 1 To 20
                If rgntxt = "附件" & j Then
                    Debug.Print "附件" & j
                    isfj = True
                    Exit For
                End If
            Next j
            If rgntxt = "附件" Or isfj = True Then
